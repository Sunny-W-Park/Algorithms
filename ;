#2075

import sys
import heapq
input = sys.stdin.readline
N = int(input())
heap = []

for _ in range(N):
    nums = list(map(int, input().split()))
    if len(heap) == 0:
        for num in nums:
            heapq.heappush(heap, num)
    else:
        for num in nums:
            if heap[0] < num:
                heapq.heappop(heap)
                heapq.heappush(heap, num)

print(heap[0])



